{
        "suggest.echodocSupport":true,
        "cSpellExt.enableDictionaries": ["german", "ukrainian"],
        "cSpell.enabledLanguageIds": ["markdown"],
        "cSpell.language": "en,de,uk",
        "languageserver": {
                "bash": {
                        "command": "bash-language-server",
                        "args": ["start"],
                        "filetypes": ["sh"],
                        "ignoredRootPaths": ["~"]
                },
                "haskell": {
                        "command": "haskell-language-server-wrapper",
                        "args": ["--lsp"],
                        "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
                        "filetypes": ["haskell", "lhaskell"]
                }
        },
        "cSpell.userWords": [
          "MOSFETs",
          "NAND",
          "Neovim",
          "crowbarring",
          "ghci",
          "kanban",
          "neofetch",
          "Більче",
          "Волицьке",
          "Дашава",
          "Дашавському",
          "Опарському",
          "Угерське"
        ],
	"inlayHint.enable": false
}
